{
  "manifest_version": 3,
  "name": "Web Quality Analyzer",
  "version": "5.0.0",
  "description": "Analyse complète de la qualité web : SEO, accessibilité, performance et conformité WCAG",
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/HCW-logo-16.png",
      "48": "icons/HCW-logo-48.png",
      "128": "icons/HCW-logo-128.png"
    }
  },
  "icons": {
    "16": "icons/HCW-logo-16.png",
    "48": "icons/HCW-logo-48.png",
    "128": "icons/HCW-logo-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'self'"
  },
  "permissions": [
    "storage",
    "notifications",
    "scripting",
    "tabs",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "webRequest",
    "debugger",
    "webNavigation",
    "offscreen"
  ],
  "options_page": "options.html",
  "host_permissions": [
    "<all_urls>",
    "*://*/*",
    "*://le-de.cdn-website.com/*",
    "*://site-privilege.pagesjaunes.fr/*",
    "*://soprod.solocalms.fr/*",
    "*://maxcdn.bootstrapcdn.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "api/extractors/DataExtractor.js",
        "api/config/ConfigurationManager.js",
        "api/core/ScoringEngine.js",
        "api/core/AnalyzerEndpoint.js",
        "api/endpoints/MetaAnalyzerEndpoint.js",
        "api/endpoints/ImageAnalyzerEndpoint.js",
        "api/endpoints/HeadingAnalyzerEndpoint.js",
        "api/endpoints/LinkAnalyzerEndpoint.js",
        "api/endpoints/AccessibilityAnalyzerEndpoint.js",
        "api/endpoints/PerformanceAnalyzerEndpoint.js",
        "api/core/AnalysisOrchestrator.js",
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "./Functions/HnOutlineValidity.js",
        "./Functions/wordCloudEnhanced.js",
        "results.html",
        "Functions/sitemapAnalyzer.js",
        "results.css",
        "results.js",
        "api/extractors/DataExtractor.js",
        "api/config/ConfigurationManager.js",
        "api/core/ScoringEngine.js",
        "api/core/AnalyzerEndpoint.js",
        "api/core/AnalysisOrchestrator.js",
        "api/core/OffscreenBatchAnalyzer.js",
        "api/utils/PageTypeDetector.js",
        "api/endpoints/MetaAnalyzerEndpoint.js",
        "api/endpoints/ImageAnalyzerEndpoint.js",
        "api/endpoints/HeadingAnalyzerEndpoint.js",
        "api/endpoints/LinkAnalyzerEndpoint.js",
        "api/endpoints/AccessibilityAnalyzerEndpoint.js",
        "api/endpoints/PerformanceAnalyzerEndpoint.js",
        "dashboard.html",
        "dashboard/dashboard.js",
        "dashboard/dashboard.css",
        "offscreen-analyzer.html",
        "offscreen-analyzer.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "overwrite-origin",
        "enabled": false,
        "path": "rulesets/overwrite-origin.json"
      }
    ]
  }
}