{
  "manifest_version": 3,
  "name": "Health checker Website",
  "version": "4.0.4",
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/HCW-logo-16.png",
      "48": "icons/HCW-logo-48.png",
      "128": "icons/HCW-logo-128.png"
    }
  },
  "icons": {
    "16": "icons/HCW-logo-16.png",
    "48": "icons/HCW-logo-48.png",
    "128": "icons/HCW-logo-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "storage",
    "notifications",
    "scripting",
    "tabs",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "webRequest",
    "debugger",
    "downloads"
  ],
  "options_page": "options.html",
  "host_permissions": [
    "<all_urls>",
    "*://*/*",
    "*://le-de.cdn-website.com/*",
    "*://site-privilege.pagesjaunes.fr/*",
    "*://soprod.solocalms.fr/*",
    "*://maxcdn.bootstrapcdn.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "./Functions/HnOutlineValidity.js",
        "./Functions/wordCloudEnhanced.js",
        "results.html",
        "Functions/sitemapAnalyzer.js",
        "results.css",
        "results.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "overwrite-origin",
        "enabled": false,
        "path": "rulesets/overwrite-origin.json"
      }
    ]
  }
}